@model AlunoModel

<form asp-controller="Aluno" asp-action="Inserir" method="post">
     
    <div class="mb-3">
        <label for="exampleInputNomee" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control col-3" id="exampleInputNomee">
    </div>
    <div class="mb-3">
        <label for="exampleInputIdade" class="form-label">Idade</label>
        <input type="text" asp-for="Idade" class="form-control col-1" id="exampleInputIdade">
    </div>
    <div class="mb-3">
        <label for="exampleInputContato" class="form-label">Contato</label>
        <input type="text" asp-for="Contato" class="form-control col-2" id="exampleInputContato">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control col-4" id="exampleInputEmail" placeholder="nome@exemplo.com">
    </div>
    <div class="mb-3">
        <label for="exampleInputCep" class="form-label">Cep</label>
        <input type="text" asp-for="Cep" class="form-control col-2" id="exampleInputCep">
    </div>
    <div class="text-center">
        <button class="btn btn-secondary" role="button" type="submit">Adicionar</button>
        <a class="btn btn-secondary" type="button" asp-controller="Aluno" asp-action="Index">Cancelar</a>
    </div>
</form>
