@model List<AlunoModel>
@if (ViewData["Mensagem"] != null)
{
<div class="alert-danger">
    @ViewData["Mensagem"]
</div>
}

<div class="alert-success">
    @TempData["Mensagem3"]
</div>

<div class="text-left ">

    <div>
        <h1>Dados do Aluno</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">Email</th>
                <th scope="col">Cep</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
<tr>
    <th scope="row">@aluno.Id</th>
    <td>@aluno.Nome</td>
    <td>@aluno.Email</td>
    <td>@aluno.Idade</td>
    <td>@aluno.Contato</td>
    <td>@aluno.Cep</td>
    <td><a class="btn btn-secondary" asp-action="BuscarEndereco" asp-route-cep=@aluno.Cep>Endereço</a></td>
    <td><a class="btn btn-secondary" asp-action="Editar" asp-route-id=@aluno.Id>Editar</a></td>
    <td><a class="btn btn-danger" asp-action="Excluir" asp-route-id=@aluno.Id>Excluir</a></td>
</tr>}
            }
        </tbody>
    </table>
    <div class="d-grid gap-2d d-md-flex justify-content-center"> <a class="btn btn-outline-dark" type="button" asp-controller="Aluno" asp-action="Adicionar">Adicionar novo aluno!</a>
    <a class="btn btn-outline-dark" type="button" asp-controller="Filtros" asp-action="Index">Filtrar</a>
     <a class="btn btn-outline-dark" type="button" asp-controller="Home" asp-action="Index">Voltar</a></div>
</div>